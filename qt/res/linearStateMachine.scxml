<?xml version="1.0"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" version="0.9">
	<state id="column" initial="columnNew">
		<datamodel>
			<data id="column"/>
		</datamodel>

		<state id="columnNew">
			<transition event="column.done" target="columnDone">
				<send event="column.grew">
					<param name="column" expr='m_column'/>
					<param name="width" expr='width()'/>
				</send>
			</transition>
		</state>
		<state id="columnDone" />
	</state>
</scxml>
